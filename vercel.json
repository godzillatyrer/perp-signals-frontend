{
  "buildCommand": "",
  "outputDirectory": ".",
  "headers": [
    {
      "source": "/styles.css",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, must-revalidate" }
      ]
    }
  ],
  "functions": {
    "api/scan.js": {
      "maxDuration": 300
    },
    "api/monitor-positions.js": {
      "maxDuration": 60
    },
    "api/evaluate-positions.js": {
      "maxDuration": 120
    },
    "api/optimize.js": {
      "maxDuration": 120
    }
  },
  "crons": [
    {
      "path": "/api/scan",
      "schedule": "*/10 * * * *"
    },
    {
      "path": "/api/monitor-positions",
      "schedule": "*/2 * * * *"
    },
    {
      "path": "/api/evaluate-positions",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/optimize",
      "schedule": "0 */6 * * *"
    }
  ]
}
